@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="@ViewData["Desc"]" />
    <title>@ViewData["Title"] - Sube1.HelloMVC</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Sube1.HelloMVC.styles.css" asp-append-version="true" />
</head>
<body>

    <div class="container">
        <main role="main" class="pb-3">


            <div class="d-flex justify-content-around mb-5">
                <a href="@Url.Action("Index", "Student")" class="btn btn-warning btn-lg btn-block mx-2 shadow-lg rounded">
                    Öğrenci Listesi
                </a>
                <a href="@Url.Action("AddOgrenci", "Student")" class="btn btn-info btn-lg btn-block mx-2 shadow-lg rounded">
                    Öğrenci Ekle
                </a>
            </div>
            <div class="d-flex justify-content-around mb-5">
                <a href="@Url.Action("Index", "Ders")" class="btn btn-warning btn-lg btn-block mx-2 shadow-lg rounded">
                    Ders Listesi
                </a>
                <a href="@Url.Action("AddDers", "Ders")" class="btn btn-info btn-lg btn-block mx-2 shadow-lg rounded">
                    Ders Ekle
                </a>
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted">

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
